page {
  background-color: #f4f4f4;
  font-size: 28rpx;
  color: #777;
}
.slide {
  width: 750rpx;
  height: 720rpx;
}
.slide-image {
  width: 100%;
  height: 100%;
}
.goodstittle {
  display: flex;
  align-items: center;
  background-color: #fff;
}
.goodstittle .left {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.goodstittle .left .goodsprice {
  color: red;
  font-size: 40rpx;
}
.goodstittle .left .goodsname {
  font-size: 30rpx;
  margin-bottom: 36rpx;
  margin-top: 5rpx;
  color: #000;
}
.goodstittle .left .kuaidi {
  margin-bottom: 20rpx;
}
.goodstittle .right {
  flex-basis: 120rpx;
  border-left: 1px solid #999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999;
  height: 100rpx;
  margin-left: 80rpx;
}
.part {
  background-color: #fff;
  margin: 20rpx 0;
  font-size: 32rpx;
  color: #999;
}
.part-line:after {
  content: '';
  height: 1rpx;
  width: 734rpx;
  background-color: #ddd;
  display: block;
  position: absolute;
  bottom: -1rpx;
}
.part-item {
  display: flex;
  padding: 28rpx 16rpx;
  position: relative;
  align-items: center;
}
.part .note {
  color: #333;
  margin-right: 40rpx;
}
.part .description {
  width: 490rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}
.part .color-main {
  color: #ff2d4a;
}
.fixed-bar {
  width: 750rpx;
  height: 98rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.fixed-bar .btn-group {
  display: flex;
}
.fixed-bar .btn {
  width: 213rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}
.fixed-bar .yellow-btn {
  background-color: #ffb400;
}
.fixed-bar .red-btn {
  background-color: #ff2d4a;
}
.fixed-bar .item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.fixed-bar .item .contact-btn {
  opacity: 0;
  position: absolute;
  width: 100%;
  height: 100%;
}
.fixed-bar .item .iconfont {
  width: 40rpx;
  height: 40rpx;
  font-size: 40rpx;
}
.fixed-bar .item .note {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #666;
}
.tabs {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0rpx 10rpx;
  margin-bottom: 100rpx;
}
.tabs-head {
  height: 100rpx;
  display: flex;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
}
.tabs-head view {
  width: 50%;
  height: 100rpx;
  position: relative;
}
.tabs-head-active {
  color: #ff2d4a;
}
.tabs-head-active::after {
  content: '';
  background-color: #ff2d4a;
  width: 100%;
  height: 4px;
  left: 0;
  bottom: 0;
  position: absolute;
}
.tabs-body {
  padding-top: 10rpx;
}
.tabs-body-attr {
  border-top: 1px solid rgba(92, 92, 92, 0.3);
  border-left: 1px solid rgba(92, 92, 92, 0.3);
}
.tabs-body-item {
  height: 100rpx;
  display: flex;
}
.tabs-body-item view {
  width: 50%;
  line-height: 100rpx;
}
.tabs-body-item-left {
  text-align: center;
  border-right: 1px solid rgba(92, 92, 92, 0.3);
  border-bottom: 1px solid rgba(92, 92, 92, 0.3);
}
.tabs-body-item-right {
  text-align: left;
  padding-left: 50rpx;
  border-right: 1px solid rgba(92, 92, 92, 0.3);
  border-bottom: 1px solid rgba(92, 92, 92, 0.3);
}
